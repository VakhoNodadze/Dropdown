{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "camelcase": 0,
    "max-len": [
      "warn",
      124
    ],
    "comma-dangle": ["error", "never"],
    "indent": [
      "warn",
      2
    ],
//    "semi": [
//      2,
//      "warn"
//    ],
    "object-curly-spacing": ["error", "always"],
    "quotes": ["error", "single"],
    "no-confusing-arrow": "warn",
    "no-lone-blocks": "error",
    "no-multi-spaces": "error",
    "no-underscore-dangle": "warn",
    "no-dupe-else-if": "warn",
    "arrow-parens": "warn",
    "default-case": "error",
    "curly": "warn",
    "complexity": ["error", 20]
    //    "semi": 1
  }
}
